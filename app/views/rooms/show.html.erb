<% @entries.each do |e| %>
  <div class="user-name">
    <strong>
      <%= image_tag e.user.get_profile_image(100,100) %>
      <%= e.user.name %>さん
    </strong>
  </div>

  <div class="chat">
    <% if @messages.present? %>
      <% @messages.each do |m| %>
        <div class="chat-box">
          <div class="chat-face">
            <%= image_tag m.user.get_profile_image(50,50) %>
          </div>
          <div class="chat-hukidashi">
            <strong><%= m.content %></strong><br>
            <%= m.created_at.strftime("%Y-%m-%d %H:%M")%>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="post">
    <%= form_with @message do |f| %>
      <%= f.text_field :content, size: 70, class:"form-text-field" %>
      <%= f.hidden_field :room_id, value: @room.id %>
      <%= f.submit "投稿", class: 'form-submit'%>
    <% end %>
  </div>